<div class="container-fluid">
  <h1 class="h3 mb-2 text-gray-800">Administradores</h1>
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Email</th>
        <th scope="col">
          <%= link_to new_admins_backoffice_admin_path, class:"btn btn-success btn-icon-split" do %>
            <span class="icon text-white-50">
              <i class="fa fa-plus"></i>
            </span>
            <span class="text">Novo</span>
          <% end %>
        </th>
      </tr>
    </thead>
    <tbody>
      <% @admins.each do |admin| %>
      <tr>
        <th scope="row"><%= admin.id %></th>
        <td><%= admin.email %></td>
        <td>
          <%= link_to edit_admins_backoffice_admin_path(admin), class:"btn btn-info btn-circle btn-sm" do %>
            <i class="fa fa-edit"></i>
          <% end %>
          <%= link_to admins_backoffice_admin_path(admin), method: :delete, class:"btn btn-danger btn-circle btn-sm", data: { confirm: 'Deseja realmente excluir este administrador?' } do %>
            <i class="fa fa-trash"></i>
          <% end %>
        </td>
      </tr>
      <% end %> 
    </tbody>
  </table>
</div>