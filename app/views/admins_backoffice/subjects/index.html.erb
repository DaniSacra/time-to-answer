<div class="container-fluid">
  <h1 class="h3 mb-2 text-gray-800">Assuntos / √Åreas</h1>
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Assuntos</th>
        <th scope="col">
          <%= link_to new_admins_backoffice_subject_path, class:"btn btn-success btn-icon-split" do %>
            <span class="icon text-white-50">
              <i class="fa fa-plus"></i>
            </span>
            <span class="text">Novo</span>
          <% end %>
        </th>
      </tr>
    </thead>
    <tbody>
      <% @subjects.each do |subject| %>
      <tr>
        <th scope="row"><%= subject.id %></th>
        <td><%= subject.description %></td>
        <td>
          <%= link_to edit_admins_backoffice_subject_path(subject), class:"btn btn-info btn-circle btn-sm" do %>
            <i class="fa fa-edit"></i>
          <% end %>
          <%= link_to admins_backoffice_subject_path(subject), method: :delete, class:"btn btn-danger btn-circle btn-sm", data: { confirm: 'Deseja realmente excluir este Assunto?' } do %>
            <i class="fa fa-trash"></i>
          <% end %>
        </td>
      </tr>
      <% end %> 
    </tbody>
  </table>
  
  <div class="text-right">
    <%= paginate @subjects %>
  </div>
</div>